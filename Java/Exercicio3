//Verificação de Nota com Mensagem

let nota = 85;
if (nota >= 80) {
    console.log('parábens, você foi muito bêm!');   
} else if (nota < 80 && nota >= 60) {
    console.log('você está precisnado estudar')
}else {
    console.log ('você está reprovado(a)');
}

